<Layouts.creators breadcrumbs={[{@creator.name, ~p"/creators/#{@creator}"}]} {assigns}>
  <.header>
    {@creator.name}
    <:subtitle>Creator</:subtitle>
    <:actions>
      <div class="space-x-2">
        <.link href={~p"/creators/#{@creator}/edit"}>
          Edit
        </.link>
        <.link href={~p"/creators/#{@creator}"} method="delete" data-confirm="Are you sure?">
          Delete
        </.link>
        <.link href={~p"/creators/#{@creator}/catalogs/new"}>
          New Catalog
        </.link>
      </div>
    </:actions>
  </.header>

  <%= if Enum.any?(@creator.catalogs) do %>
    <.table
      id="catalogs"
      rows={@creator.catalogs}
      row_click={&JS.navigate(~p"/creators/catalogs/#{&1}")}
      zebra={false}
    >
      <:col :let={catalog} label="Catalogs">{catalog.name}</:col>
      <:col :let={catalog}>{catalog.type |> to_string |> String.capitalize()}</:col>
      <:action :let={catalog}>
        <.link navigate={~p"/creators/catalogs/#{catalog}/edit"}>Edit</.link>
      </:action>
      <:action :let={catalog}>
        <.link
          href={~p"/creators/catalogs/#{catalog}"}
          method="delete"
          data-confirm="Are you sure?"
        >
          Delete
        </.link>
      </:action>
    </.table>
  <% else %>
    <div class="mt-10 text-sm">
      No catalogs yet!
      <.link navigate={~p"/creators/#{@creator}/catalogs/new"}>
        Click here to add the first.
      </.link>
    </div>
  <% end %>
</Layouts.creators>
