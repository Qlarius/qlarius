<div class="container mx-auto px-4">
  <div class="mb-4">
    <%!-- Removed class="btn btn-outline" - back component doesn't support class attribute --%>
    <%!-- Fixed route - marketer routes are under /admin namespace --%>
    <.back navigate={~p"/admin/marketers"}>Back to marketers</.back>
  </div>

  <div>
    <.header>
      <div class="flex items-center">
        <h1 class="text-2xl font-bold">
          Edit Marketer "<span class="text-primary"><%= @marketer.name %></span>"
        </h1>
      </div>
      <%!-- Removed class="mt-2 text-base-content/70" - subtitle slot doesn't support custom classes --%>
      <:subtitle>Edit marketer information.</:subtitle>
    </.header>
  </div>

  <%!-- Fixed route - marketer routes are under /admin namespace --%>
  <.marketer_form
    changeset={@changeset}
    action={~p"/admin/marketers/#{@marketer}"}
    return_to={~p"/admin/marketers"}
    submit_label="Update Marketer"
  />
</div>
