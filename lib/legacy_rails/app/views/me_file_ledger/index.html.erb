<%= turbo_frame_tag "app_window" do %>
  <div data-controller="app-page" data-app-target="appPage" data-app-page-app-page-value="ledger">

    <div class="header-large-title">
        <h1 class="title">Wallet</h1>
        <div class="d-flex flex-row justify-content-between">
          <h4 class="subtitle">Current Balance: </h4>
          <h4 class="subtitle badge background-sponster text-light"><%= number_to_currency(@current_me_file.ledger_header.balance) %></h4>
        </div>
    </div>

    <%= render 'ledger_list' %>
  </div>

<% end %>
