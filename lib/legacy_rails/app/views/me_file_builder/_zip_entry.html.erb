<div class="mb-3" data-controller="zip-check">
  <div class="row">
    <div class="col-12">
      <div class="form-group boxed p-4">
          <div class="input-wrapper">
              <input type="text" class="form-control" id="value" name="value" value="<%= @current_me_file.home_zip %>" placeholder="#####" maxlength="5" maxWidth="5" data-sign-up-target="z" data-zip-check-target="zipInput" data-action="keyup->zip-check#keyup sign-up#checkFormValidity" >
          <div class="input-info">5-digit mailing zip code</div>
          </div>
          <div class="mt-2">
            <span data-zip-check-target="zipOutput" data-sign-up-target="zConfirm" class="badge badge-success fw-bold"></span>
            <span data-zip-check-target="errorOutput" class="badge badge-danger fw-bold"></span>
          </div>
      </div>
    </div>
  </div>
</div>