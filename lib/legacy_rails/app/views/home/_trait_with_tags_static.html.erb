  
<li class="splide__slide" style="margin-right: 16px; width: 252px;">
    <div id="tag-box-trait-id-<%= trait_with_tags_static[:tag_values].first[:trait_id] %>" class="card">
        <div class="trait-name">
          <%= trait_with_tags_static[:trait_name] %>
          <% if is_tag_editable? trait_with_tags_static[:trait_name] %>
            <span class="float-end ms-3">
                <i class="bi bi-pencil"></i>
                <i class="bi bi-trash3 ms-1"></i>
            </span>
          <% end %>
        </div>
        <div class="tag-value">
          <% if trait_with_tags_static[:tag_values].empty? %>
            <span class="no-tags-text">No tags</span>
          <% else %>
            <ul>
              <% trait_with_tags_static[:tag_values].each do |t_value| %>
                <li><%= t_value[:tag_value] %></li>
              <% end %>
            </ul>
          <% end %>
        </div>
    </div>
</li>